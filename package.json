{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css:prod": "npm run build:css -- --env production",
    "dev": "pm2-dev ./pm2.config.js",
    "start": "node ./index.js",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "setup": "npm install && npm run build && npm run validate",
    "prepare": "husky install",
    "test": "echo 'add test'",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "validate": "npm run lint",
    "build:css": "postcss styles/**/*.css --base styles --dir ./app/styles",
    "build": "npm run optimize-image && npm run build:css:prod && npm run build:remix",
    "prebuild": "npm run clean && echo All clean",
    "clean": "rimraf public/build ./node_modules/.cache ./app/styles/**.css ./server/* .cache public/images",
    "postinstall": "remix setup",
    "serve": "cross-env NODE_ENV=production PORT=4000 node ./index.js",
    "optimize-image": "node ./scripts/optimizeImage.js"
  },
  "dependencies": {
    "@kentcdodds/md-temp": "^1.1.0",
    "@remix-run/express": "v0.18.0-pre.1",
    "@remix-run/node": "v0.18.0-pre.1",
    "@remix-run/react": "v0.18.0-pre.1",
    "@tailwindcss/typography": "^0.4.1",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.22",
    "express": "^4.17.1",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^6.0.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "v0.18.0-pre.1"
  },
  "devDependencies": {
    "@remix-run/dev": "v0.18.0-pre.1",
    "@types/node": "^16.6.2",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.3.2",
    "compress-images": "^1.9.9",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.19.0",
    "gifsicle": "^5.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mozjpeg": "^7.1.0",
    "pngquant": "^4.0.0",
    "pngquant-bin": "^6.0.0",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.8",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "sideEffects": true,
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)": [
      "prettier --write"
    ]
  }
}

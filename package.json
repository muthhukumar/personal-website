{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "cross-env NODE_ENV=production postcss styles --base styles --dir app/styles",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css:prod": "cross-env NODE_ENV=production npm run build:css",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "setup": "npm install && npm run build && npm run validate",
    "prepare": "husky install",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "validate": "npm run lint",
    "build": "npm run build:remix",
    "prebuild": "echo All clean",
    "clean": "npx rimraf public/build ./node_modules/.cache ./app/styles/**.css ./api/build* .cache",
    "postinstall": "remix setup node cloudflare-pages",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build --binding GRAPHQL_ENDPOINT=${GRAPHQL_ENDPOINT} --binding GRAPHQL_ACCESS_TOKEN=${GRAPHQL_ACCESS_TOKEN}",
    "start": "npm run dev:wrangler"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^3.5.2",
    "@octokit/rest": "^18.12.0",
    "@remix-run/cloudflare-pages": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "graphql-request": "^3.7.0",
    "gray-matter": "^4.0.3",
    "lru-cache": "^6.0.0",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "redis": "^4.0.1",
    "remark": "^14.0.2",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "remix": "^1.1.1",
    "unified": "^10.1.1",
    "uninstall": "^0.0.0",
    "xdm": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@types/lru-cache": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "typescript": "^4.1.2",
    "@cloudflare/workers-types": "^3.2.0",
    "cross-env": "^7.0.3",
    "esbuild": "0.13.14",
    "npm-run-all": "^4.1.5",
    "wrangler": "alpha"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)": [
      "prettier --write"
    ]
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
